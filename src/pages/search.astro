---
import Layout from "../layout/Layout.astro";
---

<Layout>
  <section class="px-2 flex flex-col space-y-4 mt-4">
    <input
      type="search"
      name="search"
      class="focus:outline-none border p-1"
      placeholder="Begin typing to search for expenses"
      hx-post="/search-expense"
      hx-trigger="keyup changed delay:1s"
      hx-target="#search-results"
      hx-swap="innerHTML"
    />

    <div
      id="search-results"
      class="grid grid-cols-2 md:grid-cols-6 mt-6 px-2 gap-4"
    >
    </div>
  </section>
</Layout>
